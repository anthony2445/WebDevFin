				div(class="collapse navbar-collapse",
				    id="bs-example-navbar-collapse-1")
					ul(class="nav navbar-nav")
						li
							a(href="/") Home
						li
							a(href="/news") News
						li
							a(href="/register") Register
						li
							a(href="/login") Login

	body
		block content
			.main.container
				div(class="content")= message
				.row
					.col-sm-6
						h1.display-4.m-b-2 Sign Up
				
						form(method="post" action='/register')
							div.form-group
								label(for='newuser') Username:
								input#newuser.form-control(type='text', placeholder='Username' name='newuser')
							div.form-group
								label(for='email') Email:
								input#email.form-control(type='email', placeholder='name@email.com' name='email')
							div.form-group
								label(for='pw') Password:
								input#pw.form-control(type='password' name='password')
							div.form-group
								label(for='pw2') Confirm Password:
								input#pw2.form-control(type='password' name='confirmPassword')
							button.btn.btn-primary(type='submit') Sign up