doctype
html
	head
		title= title

		link(rel="stylesheet",
		     href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css",
		     integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7",
		     crossorigin="anonymous")

		link(rel="stylesheet",
		     href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap-theme.min.css",
		     integrity="sha384-fLW2N01lMqjakBkx3l/M9EahuwpSfeNvV63J5ezn3uZzapT0u7EYsXMjQV+0En5r",
		     crossorigin="anonymous")

		link(rel="stylesheet",
		     href="/lab09.css")

		div(class="pageHeader")
			div
				img(src="https://dreamleague.dreamhack.com/wp-content/uploads/2016/03/Dota_2_Logo_only.png", alt="Dota 2 Logo", width="40", height="40")
				a(href="/") Dota 2

		nav(class="navbar navbar-inverse")
			div(class="container")
				div(class="navbar-header")
					a(class="navbar-brand",href="/")
						img(src="http://cdn.dota2.com/apps/dota2/images/nav/logo.png", alt="Dota 2 Logo", width="120px")
				div(class="collapse navbar-collapse",
				    id="bs-example-navbar-collapse-1")
					ul(class="nav navbar-nav")
						li
							a(href="/") Home
						li
							a(href="/news") News
						- if(currUser != '')
							li.active
								a(href="/comments") Comments
							li
								a(href="/logout") Log out
						- else
							li
								a(href="/register") Register
							li
								a(href="/login") Login

	body
		div(class="content")= message
		div(id="commentSection")
		each comment in comments
			div.story.container
				div(class="header")
					h1= comment.username
				div.body
					h4
						p= comment.date
					p= comment.comment

		form(method="post" action='/commentButton')
			input#commentField.form-control(type='text', placeholder='Enter your comment here' name='commentField')
			button.btn.btn-primary(type='submit') Submit
